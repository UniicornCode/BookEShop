@model List<EShop.Domain.DTO.OrderDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>My Orders</h1>

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>Book Name</th>
            <th>Quantity</th>
            <th>Total Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var books in Model)
        {
        <tr>
            <td>
                @foreach (var book in books.Orders.Books)
                {
                    <p>@book.Book.BookName</p>
                }
            </td>
            <td>
                @foreach (var book in books.Orders.Books)
                {
                    <p>@book.Quantity</p>
                }
            </td>
            <td>
                @books.TotalPrice
            </td>
        </tr>
        }
    </tbody>
</table>
